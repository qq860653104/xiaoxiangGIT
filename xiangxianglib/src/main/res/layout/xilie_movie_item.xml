<com.open.androidtvwidget.leanback.widget.OpenCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/w_252"
    android:layout_height="@dimen/h_397"
    android:clipChildren="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clipToPadding="false"
    android:layout_margin="@dimen/w_24"
    >

    <!--父控件必须设置背景 才可以有 z效果！！！-->

    <LinearLayout
