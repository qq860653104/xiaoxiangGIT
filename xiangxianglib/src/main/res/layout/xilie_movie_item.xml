            android:background="@drawable/home_stroke"
            android:clipChildren="false"
            android:clipToPadding="false">

            <com.open.androidtvwidget.leanback.widget.OpenCardView
                android:id="@+id/img_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_stroke"
                android:clipChildren="false"
                android:clipToPadding="false">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/my_img"
                    android:layout_width="@dimen/w_252"
                    android:layout_height="@dimen/h_357"
                    android:layout_gravity="top"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/defult_movie2"
                    app:riv_corner_radius="@dimen/w_7"
                    app:riv_mutate_background="true" />


