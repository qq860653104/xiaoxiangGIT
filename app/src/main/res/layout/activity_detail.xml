    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:id="@+id/bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />


        <com.chunleikeji.view.BlurringView
            android:id="@+id/blurring_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_706"
            app:blurRadius="11"
            app:downsampleFactor="6"
            app:overlayColor="#80FFFFFF" />


        <LinearLayout
            android:layout_width="@dimen/w_953"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="@dimen/w_400"
            android:clipChildren="false"
            android:clipToPadding="false"

            android:layout_marginRight="@dimen/w_150"
            android:gravity="left|top"
            android:orientation="vertical"
            android:paddingTop="@dimen/h_60">

            <com.chunleikeji.view.MoreTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top|left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/h_60" />

            <TextView
                android:id="@+id/addressinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/h_29"
                android:gravity="top|left"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/h_47" />

            <com.chunleikeji.view.DetailTextMoreView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_310"
                android:layout_marginTop="@dimen/h_15"
                android:focusable="true"
                android:textColor="@color/black"
                android:textSize="@dimen/h_33"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_29"
                android:clipChildren="false"
                android:clipToPadding="false">

                <com.chunleikeji.view.TvButtom
                    android:id="@+id/play_btn"
                    android:layout_width="@dimen/w_140"
                    android:layout_height="@dimen/h_80"
                    android:background="@drawable/miantopbutton"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:focusable="true"
                    android:text="播放"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h_30" />

                <com.chunleikeji.view.TvButtom
                    android:id="@+id/jujibutton"
                    android:layout_width="@dimen/w_140"
                    android:layout_height="@dimen/h_80"
                    android:layout_marginLeft="@dimen/w_23"
                    android:background="@drawable/miantopbutton"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:focusable="true"
                    android:text="选集"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h_30"
                    android:visibility="gone" />

                <com.chunleikeji.view.TvButtom
                    android:id="@+id/sc_id"
                    android:layout_width="@dimen/w_140"
                    android:layout_height="@dimen/h_80"
                    android:layout_marginLeft="@dimen/w_23"
                    android:background="@drawable/miantopbutton"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="收藏"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h_30" />


            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:id="@+id/detail_frame"
            android:layout_width="@dimen/w_400"
            android:layout_height="@dimen/h_600"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/w_200"
            android:layout_marginTop="@dimen/h_55"
            android:layout_marginRight="@dimen/w_202">

            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/w_100"
            android:gravity="right|top"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="@dimen/h_135">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/h_40" />


            <TextView
                android:id="@+id/daoyan"
                android:layout_width="@dimen/w_200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_13"
                android:text="柯蒂斯·汉森"
                android:textColor="#646363"
                android:textSize="@dimen/h_40"
                android:visibility="invisible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_34"
                android:textColor="@color/black"
                android:textSize="@dimen/h_40" />


            <TextView
                android:id="@+id/zhuyan01"
                android:layout_width="@dimen/w_200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_13"
                android:text=""
                android:textColor="#646363"
                android:textSize="@dimen/h_40"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/zhuyan02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_13"
                android:textColor="#646363"
                android:textSize="@dimen/h_40" />

            <TextView
                android:id="@+id/zhuyan03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_13"
                android:textColor="#646363"
                android:textSize="@dimen/h_40" />

            <TextView
                android:id="@+id/zhuyan04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/h_13"
                android:textColor="#646363"
                android:textSize="@dimen/h_40" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/h_700">


            <com.chunleikeji.view.BlurringView
                android:id="@+id/blurring_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/h_480"
                app:blurRadius="11"
                app:downsampleFactor="6"
                app:overlayColor="#80FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/w_50"
                    android:layout_marginTop="@dimen/h_15"
                    android:text="相关推荐"
                    android:textColor="#646363"
                    android:textSize="@dimen/h_30" />

                <com.open.androidtvwidget.leanback.recycle.RecyclerViewTV
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h_407"
                    android:layout_marginLeft="@dimen/w_50"
                    android:layout_marginTop="@dimen/h_10"
                    android:focusable="false" />
            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hold_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hold_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <com.chunleikeji.view.BlurringView
            android:id="@+id/hold_blurring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurRadius="11"
            app:downsampleFactor="6"
            app:overlayColor="#80FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <!--<ProgressBar-->
            <!--android:id="@+id/progressBar"-->
            <!--style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center" />-->

            <TextView
                android:id="@+id/hold_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="正在为您努力加载中..."
                android:textColor="@color/defult_text"
                android:textSize="@dimen/h_66"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>


    <!--</ScrollView>-->
</FrameLayout>
